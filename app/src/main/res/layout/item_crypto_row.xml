<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_margin="4dp">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimation"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:lottie_fileName="Animation - 1736221234395.json"
        app:lottie_loop="false"
        app:lottie_autoPlay="false" />
    <!-- Cryptocurrency Logo -->
    <ImageView
        android:id="@+id/imgCrypto"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop" />

    <!-- Cryptocurrency Name and Symbol -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCryptoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ethereum"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvCryptoSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETH"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <!-- Price -->
    <TextView
        android:id="@+id/tvCryptoPrice"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:text="2,509.75"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <!-- 24h Change -->
    <TextView
        android:id="@+id/tvCryptoChange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="-21.00%"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />



</LinearLayout>
